{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
        {
            "source": "*.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "max-age=0, no-cache"
                },
                {
                    "key": "Expires",
                    "value": "0"
                }
            ]
        },
        {
            "source": "**/*.@(jpg|jpeg|png|gif|svg|webp|ico)",
            "headers": [{
                "key": "Cache-Control",
                "value": "public, max-age=31557600, s-maxage=31557600"
            }]
        },
        {
            "source": "**/*.@(css|js)",
            "headers": [{
                "key": "Cache-Control",
                "value": "public, max-age=31557600, s-maxage=31557600"
            }]
        }

    ]
  }
}

